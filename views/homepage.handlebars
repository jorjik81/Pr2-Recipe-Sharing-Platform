{{#each foodItems as |foodItem| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Display food item details -->
      <a href="/fooditem/{{foodItem.id}}">{{foodItem.name}}</a>
    </h2>
    <p>
      <!-- You can represent different food icons or emojis -->
      <span aria-label="food-emoji">ðŸ¥•</span>
      <!-- Display quantity or any relevant details -->
      <span class="quantity">{{foodItem.quantity}} available</span>
    </p>
    <p>Shared by {{foodItem.user.name}} on {{format_date foodItem.date_shared}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{foodItem.description}}
    </p>
  </div>
</div>
{{/each}}
