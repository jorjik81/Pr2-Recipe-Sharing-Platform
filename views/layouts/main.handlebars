const url = `https://api.unsplash.com/photos/random?client_id=${accessKey}`;

fetch(url)
  .then((response) => response.json())
  .then((data) => {
    // Extract the photo URL from the response data
    const photoUrl = data.urls.full;

    // Set the photo as the background of your app or specific elements
    document.body.style.backgroundImage = `url(${photoUrl})`;
  })
  .catch((error) => {
    console.error('Error fetching photo:', error);
  });</script>
